{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,        
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "strict": true,
        "lib": ["ES2020", "DOM"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}